<body>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
<% end %>
<% flash.each do |name, msg| -%>
    <div data-alert class="alert-box">
      <%= content_tag :div, msg, class: name %>
      <a href="#" class="close">&times;</a>
    </div>
<% end -%>


